{
  "name": "@wave-frontend/wave-js",
  "version": "1.1.1",
  "description": "An open-source, lightweight library for frontend development written in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --minify-whitespace --outfile=./dist/index.js --platform=node && dets src/index.ts --name @wave-frontend/wave-js --files src/**/*.ts --out dist/index.d.ts",
    "bundle": "node ./scripts/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wiresnchains/wave.git"
  },
  "keywords": [
    "library",
    "js",
    "frontend",
    "wavejs"
  ],
  "author": "wiresnchains",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wiresnchains/wave/issues"
  },
  "homepage": "https://github.com/wiresnchains/wave#readme",
  "devDependencies": {
    "@types/node": "^22.2.0",
    "dets": "^0.16.0",
    "esbuild": "^0.23.1",
    "esbuild-plugin-tsc": "^0.4.0"
  }
}
